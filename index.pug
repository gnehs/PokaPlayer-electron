		link(href='https://cdnjs.cloudflare.com/ajax/libs/mdui/0.4.1/css/mdui.min.css', rel='stylesheet')
		link(href='https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css', rel='stylesheet')
		style.
			body, input, textarea, select, button{
				font-family: 'Noto Sans TC',"微軟正黑體", "Microsoft JhengHei", sans-serif !important;
			}
			body {
				margin: 0;
				font-weight: normal !important;
				background-color: #fff;
				background-image: linear-gradient(45deg, #0000000d 50%, transparent 0);
				background-size: 40px 40px;
			}
			#poka {
				width: 100%;
				height: calc(100vh);
			}
	body
